<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:cells="clr-namespace:DrawUITest.Pages.Cells"
    x:Class="DrawUITest.Pages.TestPageCollectionView"
    Title="CollectionView + CanvasTemplate">
    
    <Grid
        RowDefinitions="80, *">
        <StackLayout
            Grid.Row="0"
            HorizontalOptions="Fill"
            VerticalOptions="Center">
            
            <Label 
                Text="CollectionView + CanvasTemplate"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                />
            <Label 
                Text="Please tap on the group header to expand/collapse the items and see the null-exception"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                />
        </StackLayout>

        <CollectionView
            Grid.Row="1"
            SelectionMode="None"
            ItemSizingStrategy="MeasureAllItems"
            ItemsSource="{Binding Items}"
            BackgroundColor="LightGray"
            >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <draw:Canvas
                        Gestures="Enabled"
                        RenderingMode = "Default"
                        BackgroundColor="WhiteSmoke"
                        HorizontalOptions="Fill"
                        VerticalOptions="Start"
                        >

                        <cells:MyCellTemplateBind 
                            />

                    </draw:Canvas>
                    
                    <!-- <draw:Canvas
                        HorizontalOptions="Fill"
                        VerticalOptions="Start"
                        HeightRequest="100">
                        <draw:SkiaLayout
                            HorizontalOptions="Fill"
                            VerticalOptions="Start"
                            Type="Column"
                            BackgroundColor="LightCoral">
                            <draw:SkiaLabel 
                                Margin="10, 0, 10, 0"
                                Text="{Binding Text1}"
                                FontSize="15"
                                TextColor="Black"/>
                        </draw:SkiaLayout>
                    </draw:Canvas> -->
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>